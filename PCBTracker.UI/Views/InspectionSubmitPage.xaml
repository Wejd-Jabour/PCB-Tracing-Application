<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:PCBTracker.UI.ViewModels"
    x:Class="PCBTracker.UI.Views.InspectionSubmitPage"
    Title="Submit Inspection">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Date" />
            <DatePicker Date="{Binding Date}" />

            <Label Text="Product / SKU" />
            <Picker ItemsSource="{Binding ProductTypes}"
                    SelectedItem="{Binding ProductType}" />

            <Label Text="Product ID / SN" />
            <Entry Text="{Binding SerialNumber}"
                   Placeholder="Scan or type barcode" />

            <Label Text="Issue Description" />
            <Editor Text="{Binding IssueDescription}" AutoSize="TextChanges" />

            <Label Text="Severity Level" />
            <Picker ItemsSource="{Binding SeverityLevels}"
                    SelectedItem="{Binding SeverityLevel}" />

            <Label Text="Immediate Action Taken" />
            <Editor Text="{Binding ImmediateActionTaken}" AutoSize="TextChanges" />

            <Label Text="Additional Notes" />
            <Editor Text="{Binding AdditionalNotes}" AutoSize="TextChanges" />

            <Label Text="Assemblies Completed" />
            <CollectionView ItemsSource="{Binding AssembliesCompleted}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Key}" />
                        <!-- Or use HorizontalStackLayout to display key & value -->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Optional inputs to add more assemblies -->
            <HorizontalStackLayout>
                <Entry x:Name="AssemblyProductInput" Placeholder="Product Type" />
                <Entry x:Name="AssemblyCountInput" Placeholder="Count"
                       Keyboard="Numeric" />
                <Button Text="Add" Clicked="OnAddAssemblyClicked" />
            </HorizontalStackLayout>

            <Button Text="Submit Inspection"
                    Command="{Binding SubmitCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
