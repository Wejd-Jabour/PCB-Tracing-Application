<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PCBTracker.UI.Views"
    x:Class="PCBTracker.UI.AppShell"
    Shell.NavBarIsVisible="True">

    <!-- Toolbar with Logout -->
    <Shell.ToolbarItems>
        <ToolbarItem
            Text="Logout"
            Order="Primary"
            Priority="0"
            Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>

    <!-- TabBar will be populated dynamically in code-behind -->
    <TabBar x:Name="MainTabBar" />
</Shell>
